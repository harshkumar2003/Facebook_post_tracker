{
  "manifest_version": 3,
  "name": "Facebook Group Posting Tracker",
  "version": "1.0",
  "description": "Track Facebook groups where you have already posted.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.facebook.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/groups/*"],
      "js": ["content.js"]
    }
  ]
}
